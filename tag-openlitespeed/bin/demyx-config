    env                                 CRAWLER_LOAD_LIMIT=$DEMYX_CRAWLER_LOAD_LIMIT
    env                                 CRAWLER_USLEEP=$DEMYX_CRAWLER_USLEEP
    $(demyx_config_env)
    initTimeout                         300
    retryTimeout                        0
    persistConn                         1
    pcKeepAliveTimeout                  300
    respBuffer                          0
    autoStart                           1
    path                                ${DEMYX_LSPHP}/bin/lsphp
    backlog                             100
    instances                           1
    priority                            0
    memSoftLimit                        0
    memHardLimit                        0
    procSoftLimit                       0
    procHardLimit                       0
}

scriptHandler {
    add lsapi:lsphp                     php
}

